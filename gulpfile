//@ts -check

const { watch, series, task } = require('gulp');
const { copyInterfaces } = require('./scripts/create-interfaces-symlink');

task('watch', function () {
  watch('./packages/client/src/package/types/interfaces.ts').on('change', series(copyInterfaces));
  watch('./packages/room/src/types/interfaces.ts').on(
    'change',
    series(() => {
      console.log('DO NOT EDIT THIS FILE MANUALLY! Use client or server implementation instead');
    })
  );
});
